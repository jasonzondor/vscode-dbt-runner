{
  "name": "dbt-runner",
  "displayName": "DBT Runner",
  "description": "VS Code extension for running dbt projects with Snowflake key pair authentication",
  "version": "0.6.2",
  "publisher": "jason-zondor",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonzondor/vscode-dbt-runner.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/pyproject.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dbt-runner.runDbt",
        "title": "DBT Runner: Run DBT Command"
      },
      {
        "command": "dbt-runner.setupProject",
        "title": "DBT Runner: Setup Project (Poetry Install & DBT Deps)"
      },
      {
        "command": "dbt-runner.addProfileConfig",
        "title": "DBT Runner: Add Profile Configuration"
      },
      {
        "command": "dbt-runner.removeProfileConfig",
        "title": "DBT Runner: Remove Profile Configuration"
      },
      {
        "command": "dbt-runner.listProfileConfigs",
        "title": "DBT Runner: List Profile Configurations"
      },
      {
        "command": "dbt-runner.runPreCommit",
        "title": "DBT Runner: Run Pre-Commit Checks"
      },
      {
        "command": "dbt-runner.runProjectEvaluator",
        "title": "DBT Runner: Run DBT Project Evaluator"
      }
    ],
    "keybindings": [
      {
        "command": "dbt-runner.runDbt",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      }
    ],
    "configuration": {
      "title": "DBT Runner",
      "properties": {
        "dbtRunner.profileConfigs": {
          "type": "array",
          "default": [],
          "markdownDescription": "Configure authentication credentials for dbt profile targets. Associate each profile target with Snowflake key pair authentication details.",
          "items": {
            "type": "object",
            "required": [
              "profileTarget",
              "user",
              "privateKeyPath"
            ],
            "properties": {
              "profileTarget": {
                "type": "string",
                "description": "DBT profile target name (e.g., dev, prod). Must match a target in your profiles.yml",
                "minLength": 1
              },
              "user": {
                "type": "string",
                "description": "Snowflake username",
                "minLength": 1
              },
              "privateKeyPath": {
                "type": "string",
                "description": "Absolute path to private key file (.p8)",
                "minLength": 1
              },
              "privateKeyPassphrase": {
                "type": "string",
                "default": "",
                "description": "Private key passphrase (leave empty to be prompted at runtime)"
              }
            }
          },
          "editPresentation": "multilineText"
        },
        "dbtRunner.autoSetupOnOpen": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Automatically run `poetry install` and `dbt deps` when opening a dbt project",
          "order": 3
        },
        "dbtRunner.dbtProjectPath": {
          "type": "string",
          "default": "dbt",
          "markdownDescription": "Relative path to dbt project directory from workspace root",
          "order": 2
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^3.7.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^8.54.0",
    "semantic-release": "^24.0.0",
    "typescript": "^5.3.0"
  }
}
